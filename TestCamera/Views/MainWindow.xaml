<Window x:Class="TestCamera.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:WPFMediaKit="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
      Title="摄像头捕获" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 摄像头预览区域 -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1">
            <WPFMediaKit:VideoCaptureElement x:Name="CameraControl" 
                                           Stretch="Uniform"/>
        </Border>

        <!-- 控制按钮 -->
        <Button Grid.Row="1" Content="拍照" 
                Click="CaptureButton_Click" 
                Margin="10" Padding="20 5"/>
    </Grid>
</Window>
