<Window x:Class="Face.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:Ext="clr-namespace:Face.Extensions"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}"    
        Style="{StaticResource MaterialDesignWindow}"
         TextElement.FontSize="33"
        TextElement.Foreground="Black"
        WindowState="Maximized"
        Height="1080" Width="1920" >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisility"/>
    </Window.Resources>
    <materialDesign:DialogHost Identifier="Root" x:Name="DialogHost">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="/Image/背景.png"/>
            </Grid.Background>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Height="80" Width="260" Source="/Image/深航logo.png" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="66,54,0,0"/>
                <Image Visibility="{Binding IsDisplayImg ,Converter={StaticResource BoolToVisility}}" Grid.Column="1" Width="600" Source="/Image/名称-1.png" HorizontalAlignment="Center"
Margin="0,66,0,-68"/>
                <TextBlock Grid.Column="2" Foreground="White" Text="{Binding DisplayTime}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,54,38,0"/>
            </Grid>
            <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static Ext:PrismManager.MainWindowRegionName}"/>

            <StackPanel Grid.Row="2"  Orientation="Horizontal"  Margin="10" HorizontalAlignment="Center">
                <TextBlock Text="本机编号："/>
                <TextBlock Text="本机编号："/>
                <TextBlock Text="本机编号："/>
                <TextBlock Text="本机编号："/>
                <TextBlock Text="本机编号："/>
                <TextBlock Text="本机编号："/>
            </StackPanel>

        </Grid>
    </materialDesign:DialogHost>

</Window>
